{
  "format_version": 2,

  "executors": [
    {
      "tasks": [
        "train",
        "submit_model",
        "validate"
      ],
      "executor": {
        "id": "Executor",
        "path": "nvflare.app_common.executors.learner_executor.LearnerExecutor",
        "args": {
          "learner_id": "pt_learner"
        }
      }
    }
  ],
  "task_result_filters": [
  ],
  "task_data_filters": [
  ],
  "components": [
    {
      "id": "pt_learner",
      "path": "pt_learner.PTLearner",
      "args": {
        "data_path": "/workspace/src/data/2018_n2c2/2_split/",
        "lr": 5e-5,
        "epochs": 1,
        "bs": 32,
        "analytic_sender_id": "analytic_sender"
      }
    },
    {
      "id": "analytic_sender",
      "name": "AnalyticsSender",
      "args": {"event_type": "analytix_log_stats"}
    },
    {
      "id": "event_to_fed",
      "name": "ConvertToFedEvent",
      "args": {"events_to_convert": ["analytix_log_stats"], "fed_event_prefix": "fed."}
    }
  ]
}
